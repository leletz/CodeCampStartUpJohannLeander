<div class="container mb-5">
  <h2>
    <%= @idea.title %>
  </h2>
  <div class="row">
    <div class="col-2 p-3">
      <b>Description of the start up</b>
    </div>
    <div class="col-4 p-3">
      <%= @idea.discription %>
    </div>
  </div>
  <div class="row">
    <div class="col-2 p-3">
      <b>Market segment of the business idea:(B2B / B2C)</b>
    </div>
    <div class="col-4 p-3">
      <%= @idea.market %>
    </div>
  </div>
  <div class="row">
    <div class="col-2 p-3">
      <b>Help is needed for...</b>
    </div>
    <div class="col-4 p-3">
      <%= @idea.help %>
    </div>
  </div>
  <div class="row">
    <div class="col-2 p-3">
      <b>Target group of the business</b>
    </div>
    <div class="col-4 p-3">
      <%= @idea.target %>
    </div>
  </div>
  <div class="row">
    <div class="col-2 p-3">
      <b>Keyword</b>
    </div>
    <div class="col-4 p-3 ">
      <%= @idea.keyword %>
    </div>
  </div>
</div>
<div class="container">
  <h4>
  Comments
  </h4>
</div>
<% @idea.comments.order(created_at: :desc).each do |comment| %>
  <div class="container mb-4">
      <div>
        <%= comment.name %> (Reference: <%= comment.reference %>) wrote
      </div>
      <div class="mb-2">
        <%= comment.text %>
      </div>
      <div>
        <i>Sounds good?</i> Contact <%= link_to comment.name, "mailto:#{comment.email}" %>
      </div>
  </div>
<% end %>


<div class="container">
  <h4>
    Write a comment concerning "<%= @idea.title %>"
  </h4>
</div>

<%= form_for [@idea, Comment.new] do |f| %>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="mb-3">
          <%= f.label :text, 'Comment' %>
          <%= f.text_area :text, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="mb-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <div class="col">
        <div class="mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>
      <div class="col">
        <div class="mb-3">
          <%= f.label :Reference %>
          <%= f.text_field :reference, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="mb-3">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
