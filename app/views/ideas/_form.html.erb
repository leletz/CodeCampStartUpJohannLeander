<% if @idea.errors.any? %>
  <ul> 
    <% @idea.errors.full_messages.each do |message| %>
      <li>
          <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @idea do |f| %>
  <div class="container mb-2">
      <%= f.label :title, "Give your idea a name", class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="container mb-2">
    <%= f.label :discription, 'Describe your idea:', class: "form-label" %>
    <%= f.text_area :discription, class: "form-control" %>
  </div>
  <div class="container mb-2">
    <%= f.label :target, 'Which group of people you want to target?', class: "form-label" %>
    <%= f.text_field :target, class: "form-control" %>
  </div>
  <div class="container mb-2">
    <%= f.label :keyword, 'One keyword for your Start Up:', class: "form-label" %>
    <%= f.text_field :keyword, class: "form-control" %>
  </div>
  <div class="container mb-2">
    <%= f.label :market, 'Which business model will you focus on?', class: "form-label"%>
    <p>
      <%= f.radio_button :market, 'B2B', :checked => true %> B2B
      <%= f.radio_button :market, 'B2C'%> B2C
    </p>
  </div>
  <div class="container mb-2">
    <%= f.label :help, 'Which kind of help is needed?', class: "form-label" %>
    <%= f.text_field :help, class: "form-control" %>
  </div>
  <div class="container mb-2">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
